@using OnlineStore1.Models
@model List<ProductModel>

@{
    ViewData["Title"] = "Cart";

    var formatter = new System.Globalization.CultureInfo("HA-LATN-NG");
    formatter.NumberFormat.CurrencySymbol = "₦";
}

<div class="small-container cart-page">
    <h3>Cart Items</h3>
    @if (Model.Count < 1)
    {
        <div class="row">
            <div class="col"></div>
            <div class="col-5 justify-content-center">
                <h4>No item found</h4>

            </div>
            <div class="col"></div>
        </div>
        <div class="row">
            <div class="col-6">
                <a asp-action="Index" asp-area="Customer" class="btn btn-primary">Back Home</a>

            </div>
        </div>
    }
    else
    {

        <table class="table-responsive">
            <thead>
                <tr>
                    <th>Product Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Product Type</th>
                    <th>Color</th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            <img src="~/@item.Image" alt="@item.Name" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C3", formatter)</td>
                        <td>@item.productTypes.ProductType</td>
                        <td>@item.ProductColor</td>
                        <td>
                            <a asp-action="Remove" asp-controller="Home" asp-area="Customer" asp-route-Id="@item.Id" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>

        <br />

        <div class="total-price">
            <table>
                <tr>
                    <td>Grant Total</td>
                    <td> @Model.Sum(c => c.Price).ToString("C3", formatter)</td>
                </tr>
                <tr></tr>
                <tr></tr>
                <tr>
                    <td><a asp-action="Index" asp-area="Customer" class="btn btn-primary">Back Home</a></td>
                    <td><a asp-action="Checkout" asp-controller="Order" asp-area="Customer" class="btn btn-success">Proceed to Checkout</a></td>
                </tr>
            </table>
        </div>

    }

</div>
