
@using OnlineStore1.Models
@model IEnumerable<ApplicationUser>

    <br />
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h3 class="text-info">Admins</h3>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Register" class="btn btn-info">Add New Admin</a>

            </div>
        </div>
        <br />


    </div>


    <div class="container">

        <table class="table table-striped border" id="myTable">
            @*The Id was use to call the DataTable function*@

            <thead>
                <!--This is used so as to use DataTable Features  ***Remember the Id in the Table Tag-->
                <tr class="table-info">
                    @*<th>
                        @Html.DisplayNameFor(c => c.Id)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(c => c.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.Email)
                    </th>
                    @*<th>
                           Status
                        </th>*@
                </tr>
            </thead>

            <tbody>
                @*This is also usedfor the DataTable*@
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>@item.Id</td>*@
                        <td>@item.LastName</td>
                        <td>@item.FirstName</td>
                        <td>@item.Email</td>

                        @*This is to check if the User is Active of not*@

                        @*
                                @if (item.LockoutEnd > DateTime.Now || item.LockoutEnd != null)
                            {
                                <td> Inactive</td>
                            }
                            else
                            {
                                <td> Active</td>
                            }
                        *@

                    </tr>
                }
            </tbody>

        </table>
    </div>
    @section Scripts{

        <!--    This to Use a JavaScript Function... The function is for the alert Notification-->

        <script src="~/lib/AlertifyJS/alertify.min.js"></script>    <!--    This is for the Alert dialog -->
        <script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>

        <script type="text/javascript">

    /* This is for the DataTable */
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

        /* This is for the Alerts... Alertify */
        $(function () {
            var save = '@TempData["save"]'

            if (save != '') {
                alertify.success(save);
            }
        })
        </script>
    }