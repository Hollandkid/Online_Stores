@model OnlineStore1.Models.ProductTypes

@{
    ViewData["Title"] = "Product Types Details";
}


<div class="container">
    <h4>Details of Product Types</h4>
    <hr />
    <form asp-action="Details" method="post">
        <div class="p-4 rounded border">
            <div class="form-group row">
                <div class="col-2 ">
                    <label asp-for="ProductType" class="control-label"></label>
                </div>
                <div class="col-5 ">
                    <input asp-for="ProductType" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Edit" asp-controller="ProductTypes" asp-route-Id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" asp-controller="ProductTypes" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>

<!--    Call in the Ajax cdns for Quick Validations-->
@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

