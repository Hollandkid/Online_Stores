@model OnlineStore1.Models.ApplicationUser

@{
    ViewData["Title"] = "Customer Details";
}
<div class="container">
    <h4>Customer Details</h4>
    <hr />
    <form asp-action="Activate" method="post">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2 ">
                    <label asp-for="FirstName" class="control-label"></label>
                </div>
                <div class="col-10 ">
                    <input asp-for="FirstName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2 ">
                    <label asp-for="LastName" class="control-label"></label>
                </div>
                <div class="col-10 ">
                    <input asp-for="LastName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2 ">
                    <label asp-for="Email" class="control-label"></label>
                </div>
                <div class="col-10 ">
                    <input asp-for="Email" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2 ">
                    <label asp-for="UserName" class="control-label"></label>
                </div>
                <div class="col-10 ">
                    <input asp-for="UserName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2 ">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                </div>
                <div class="col-10 ">
                    <input asp-for="PhoneNumber" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2 ">
                    <label asp-for="Address" class="control-label"></label>
                </div>
                <div class="col-10 ">
                    <input asp-for="Address" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <input type="submit" value=" Activate Account " class="btn btn-primary" />

        </div>
        

        <div class="form-group row">

            @*<input type="submit" value="  Register  " class="btn btn-primary" />*@
            <a asp-action="Index" class="btn btn-success m-3">Back to Home</a>
            <a asp-action="Delete" class="btn btn-danger m-3" asp-route-id="@Model.Id">Delete Account</a>


        </div>
    </form>
</div>

<!--    Call in the Ajax cdns for Quick Validations-->
@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}