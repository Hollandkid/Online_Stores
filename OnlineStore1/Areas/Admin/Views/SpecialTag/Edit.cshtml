@model OnlineStore1.Models.SpecialTagModel
@{
    ViewData["Title"] = "Edit Brand";
}

<div class="container">
    <h4>Edit Brands</h4>
    <hr />
    <form asp-action="Edit" method="post">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2 ">
                    <label asp-for="SpecialTag" class="control-label"></label>
                </div>
                <div class="col-5 ">
                    <input asp-for="SpecialTag" class="form-control" />
                </div>
                <span asp-validation-for="SpecialTag" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="  Update  " class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>

<!--    Call in the Ajax cdns for Quick Validations-->
@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}